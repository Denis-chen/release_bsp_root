<?xml version="1.0"?>
<module name="devi-tsc2007">
  <classification>Driver</classification>
  <description>
    <short>Photon Input Manager for TSC2007 Touchscreen controller</short>
    <abstract><![CDATA[
      
        The devi-tsc2007 is a Photon input manager for the TI TSC2007 Touchscreen controllers.
      
    ]]></abstract>
  </description>
  <supports>
    <availability>
      <cpu isa="arm">
        <byteOrder>le</byteOrder>
      </cpu>
      <cpu isa="sh">
        <byteOrder>le</byteOrder>
      </cpu>
      <cpu isa="mips">
        <byteOrder>le</byteOrder>
      </cpu>
      <cpu isa="ppc">
        <byteOrder>be</byteOrder>
      </cpu>
      <cpu isa="x86"/>
    </availability>
  </supports>
  <contents>
    <component id="tsc2007" generated="true">
      <location basedir="nto/arm/le">devi-tsc2007</location>
      <location basedir="nto/sh/le">devi-tsc2007</location>
      <location basedir="nto/mips/le">devi-tsc2007</location>
      <location basedir="nto/ppc/be">devi-tsc2007</location>
      <location basedir="nto/x86/">devi-tsc2007</location>
    </component>
  </contents>
  <requires>
    <part build="false" location="hardware/devi"/>
    <part build="true" rootMacro="DEVILIB_ROOT" location="hardware/devi/lib"/>
    <part build="true" rootMacro="KEYMAP_ROOT" location="hardware/devi/keymap"/>
  </requires>
</module>
